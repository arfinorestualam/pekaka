<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenThree"
    android:background="#5BAAD9">

    <ImageView
        android:id="@+id/imgword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:src="@drawable/word_splashscrenn_3"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        />
    <com.google.android.material.button.MaterialButton
        android:backgroundTint="#F2F2F2"
        android:id="@+id/btnNext"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="10dp"
        app:strokeColor="@color/white"
        android:layout_centerInParent="true"
        app:strokeWidth="2dp"
        android:textColor="#5BAAD9"
        android:layout_below="@+id/cartoon"
        app:cornerRadius="30dp"
        android:fontFamily="@font/montserrat"
        android:text="Mulai"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/cartoon"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@+id/imgword"
        android:layout_centerInParent="true"
        android:foregroundGravity="right"
        android:src="@drawable/splash_cartoon_3" />

</RelativeLayout>