<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity"
    android:theme="@style/SplashTheme"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="216dp"
        android:layout_height="152dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="41dp"
        android:fontFamily="@font/montserrat"
        android:text="“Hidup yang tidak dipertaruhkan tidak akan pernah dimenangkan”"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tvEmail"
        android:layout_width="311dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="270dp"
        android:height="60dp"
        android:background="@drawable/rectangle"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="6dp"
        android:drawableTint="#3F4043"
        android:gravity="start|center"
        android:hint="Email"
        android:padding="6dp"
        android:textColor="#663F4043"
        android:textColorHint="#663F4043"
        android:textSize="15sp" />
    <EditText
        android:layout_width="311dp"
        android:layout_height="50dp"
        android:layout_marginTop="326dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/tvPassword"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/rectangle"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="6dp"
        android:gravity="start|center"
        android:height="60dp"
        android:drawableTint="#3F4043"
        android:textColorHint="#663F4043"
        android:padding="6dp"
        android:hint="Password"
        android:textColor="#663F4043"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tvForgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPassword"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="384dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/montserrat"
        android:text="Lupa password ?"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMasuk"
        android:layout_width="108dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="419dp"
        android:backgroundTint="#2CBEFF"
        android:fontFamily="@font/montserrat"
        android:text="Masuk"
        android:textSize="15sp"
        app:cornerRadius="8dp"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />
    <View
        android:layout_width="135dp"
        android:layout_height="1dp"
        android:layout_marginTop="483dp"
        android:layout_marginStart="32dp"
        android:layout_alignParentStart="true"
        android:background="@color/white_imperfect"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atau"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="475dp"
        android:textSize="12sp"
        android:layout_marginStart="172dp"
        android:textColor="#FFFFFF"/>

    <View
        android:layout_width="137.5dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="205.5dp"
        android:layout_marginTop="483dp"
        android:background="@color/white_imperfect" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFacebook"
        android:layout_width="311dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="508dp"
        android:backgroundTint="#4460A0"
        android:drawableLeft="@drawable/facebook"
        android:fontFamily="@font/montserrat"
        android:gravity="start|center"
        android:text="Masuk dengan Facebook"
        android:textAlignment="center"
        android:textStyle="bold"
        app:cornerRadius="6dp" />
    <com.google.android.material.button.MaterialButton
        android:layout_width="311dp"
        android:layout_marginTop="554dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:backgroundTint="#FFFFFF"
        android:textStyle="bold"
        android:drawableLeft="@drawable/google"
        android:gravity="start|center"
        android:text="Masuk dengan Google"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat"
        app:cornerRadius="6dp"
        android:id="@+id/btnGoogle"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="311dp"
        android:layout_marginTop="600dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:backgroundTint="#007EBB"
        android:textStyle="bold"
        android:drawableLeft="@drawable/linkein"
        android:gravity="start|center"
        android:text="Masuk dengan linked in"

        android:textAlignment="center"
        android:fontFamily="@font/montserrat"
        app:cornerRadius="6dp"
        android:id="@+id/btnLinkedin"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="670dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/belum_punya_akun"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvDaftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/disini"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>